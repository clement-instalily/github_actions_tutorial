# Email Configuration
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
IMAP_SERVER=imap.gmail.com

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp

# Analysis Configuration
ANALYSIS_DAYS=7
BATCH_SIZE=5
CONFIDENCE_THRESHOLD=0.6

# Feature Toggles
ENABLE_EXECUTIVE_BRIEFING=true
ENABLE_PROMISE_TRACKER=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_SPAM_RESCUE=true
ENABLE_DRAFT_ASSISTANT=true
ENABLE_RELATIONSHIP_ANALYTICS=true

# Data Storage
DATA_DIR=data

# Email Folders (comma-separated, leave blank for Gmail defaults)
FOLDERS=

# VIP Detection
VIP_EMAIL_THRESHOLD=5
FOLLOWUP_DAYS_THRESHOLD=4

# Report Configuration
REPORT_FORMAT=markdown
TOP_N_ITEMS=5

# API Configuration
HOST=0.0.0.0
PORT=8000
